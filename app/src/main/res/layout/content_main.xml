<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="willzma.com.keller.MainActivity"
    tools:showIn="@layout/activity_main"
    android:foregroundTint="#ffffff"
    android:backgroundTint="@android:color/secondary_text_light"
    android:background="#c94545">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera (OCR)"
            android:id="@+id/buttonCamera"
            android:layout_weight="0.50"
            android:elegantTextHeight="true"
            android:drawableTintMode="multiply"
            android:background="#618fcd"
            android:gravity="center"
            android:textColor="#f8f8ff"
            android:textSize="50dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Braille Book"
            android:id="@+id/buttonMyBraille"
            android:layout_weight="0.50"
            android:background="#845692"
            android:textColor="#f8f8ff"
            android:textSize="50dp" />
          android:gravity="start"
            android:background="#925da6" />
    </LinearLayout>
</RelativeLayout>
